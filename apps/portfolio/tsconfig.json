{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["app/shared/components"],
      "@animations/*": ["app/animations/*"],
      "@icons/*": ["app/shared/icons/*"],
      "@providers/*": ["app/shared/providers/*"],
      "@tokens/*": ["app/shared/tokens/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
