{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "#components/*": ["src/components"],
      "#icons/*": ["src/icons/*"],
      "#constants/*": ["src/constants/*"],
      "#tokens/*": ["src/tokens/*"],
      "#providers/*": ["src/providers/*"],
      "#animations/*": ["src/animations/*"],
      "#velog/*": ["src/velog/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
