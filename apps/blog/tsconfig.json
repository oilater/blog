{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "#/*": ["src/*"],
      "#components/*": ["src/components/*"],
      "#icons/*": ["src/icons/*"],
      "#styles/*": ["src/styles/*"],
      "#tokens/*": ["src/tokens/*"],
      "#constants/*": ["src/constants/*"],
      "#providers/*": ["src/providers/*"],
      "#lib/*": ["src/lib/*"],
      "#utils/*": ["src/utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
